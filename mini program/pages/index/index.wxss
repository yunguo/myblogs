/**index.wxss**/
.formView {
  flex-direction: column;
  align-items: center;
  width: 100%;
}
.userinfo {
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.section_gap{
  width: 100%;
  padding: 10px 20px;
  line-height: 20px;
  display: inline-block;
  border-bottom: #F7F7F7 solid 1px;
}
.placeholderClass{
  font-size: .8rem;
}
.text{
  font-size: .8rem;
  color: #C0C1C5;
  width: 25%;
}
.text,.inputView,.unit,.unit_pin{
  line-height: 27px;
  display: inline-block;
  vertical-align: middle;
}
.unit{font-size: .5rem;}
.inputView{
font-size: 1rem;
width: 55%;
}
.btn_gap{
  margin-top: 10px;
padding: 0 20px;
}
.submitBtn{
background-color: #09BB07;
color: #FFFFFF;
}
.button-hover {
  background-color: #D2D2D2;
  color: #EAEAEA;
}
