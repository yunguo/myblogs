/**index.wxss**/
.formView {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.section_gap{
  width: 100%;
  padding: 10px 20px;
  line-height: 20px;
  display: inline-flex;
  border-bottom: #F7F7F7 solid 1px;
}
.placeholderClass{
  font-size: .8rem;
}
.text{
  font-size: .8rem;
  color: #C0C1C5;
  width: 25%;
}
.text,.inputView,.unit{
  line-height: 27px;
  display: inline-flex;
  vertical-align: middle;
}
.inputView{
font-size: 1rem;
width: 55%;
}
.btn_gap{
  margin-top: 10px;
padding: 0 20px;
}
.submitBtn{
background-color: #09BB07;
color: #FFFFFF;
}
.button-hover {
  background-color: #D2D2D2;
  color: #EAEAEA;
}
